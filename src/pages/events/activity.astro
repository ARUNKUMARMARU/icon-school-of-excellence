import EventsList from '../../components/events-list.astro';

const images = [
  {
    src: '/assets/images/events/activity/icon school of excellence activity2.webp',
    alt: 'icon-school-of-excellence-hands-on-activity-1',
  },
  {
    src: '/assets/images/events/activity/icon school of excellence activity3.webp',
    alt: 'icon-school-of-excellence-hands-on-activity-2',
  },
  {
    src: '/assets/images/events/activity/icon school of excellence activity4.webp',
    alt: 'icon-school-of-excellence-hands-on-activity-3',
  },
  {
    src: '/assets/images/events/activity/icon school of excellence activity5.webp',
    alt: 'icon-school-of-excellence-hands-on-activity-4',
  },
  {
    src: '/assets/images/events/activity/icon school of excellence activity6.webp',
