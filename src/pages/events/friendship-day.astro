import EventsList from '../../components/events-list.astro';

const images = [
  {
    src: '/assets/images/events/friendship day/icon school of excellence.webp',
    alt: 'Icon School of Excellence - Friendship Day 1',
  },
  {
    src: '/assets/images/events/friendship day/icon school of excellence1.webp',
    alt: 'Icon School of Excellence - Friendship Day 2',
  },
  {
