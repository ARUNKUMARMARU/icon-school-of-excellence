        <script>
          document.addEventListener('DOMContentLoaded', function () {
            let currentIndex = 0;
            const totalSlides = 6;
            let slideInterval;

            const slider = document.getElementById('slider');

            function showSlide(index) {
              // Correct slide index to loop between 0 and totalSlides - 1
              currentIndex = (index + totalSlides) % totalSlides;
              slider.style.transform = `translateX(-${currentIndex * 100}%)`;
            }

            function startSliding() {
              slideInterval = setInterval(() => {
                showSlide(currentIndex + 1);
              }, 3000);
            }

            function stopSliding() {
              clearInterval(slideInterval);
            }

            // Start automatic sliding
            startSliding();

            // Function for manual slide movement
            window.moveSlide = function (direction) {
              showSlide(currentIndex + direction);
            };

            // Pause sliding on hover and resume on mouse leave
            slider.addEventListener('mouseover', stopSliding);
            slider.addEventListener('mouseout', startSliding);
          });
        </script>
